<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginNormal"
    android:elevation="8dp">


    <com.aghajari.emojiview.view.AXEmojiEditText
        android:id="@+id/selected_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="@dimen/marginNormal"
        android:background="@drawable/emoji_edittext_shape"
        android:gravity="center"
        android:maxLength="2"
        android:textSize="20sp"
        android:padding="@dimen/paddingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emojiFive"
        app:layout_constraintStart_toStartOf="@+id/emojiFive"
        app:layout_constraintTop_toTopOf="@+id/emojiNine" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emojiSix"
        app:layout_constraintStart_toStartOf="@+id/emojiSix"
        app:layout_constraintTop_toTopOf="@+id/emojiNine" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emojiSeven"
        app:layout_constraintStart_toStartOf="@+id/emojiSeven"
        app:layout_constraintTop_toTopOf="@+id/emojiNine" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emojiEight"
        app:layout_constraintStart_toStartOf="@+id/emojiEight"
        app:layout_constraintTop_toTopOf="@+id/emojiNine" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/emojiSix"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emojiTen" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/emojiTen"
        app:layout_constraintEnd_toStartOf="@+id/emojiSeven"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/emojiFive"
        app:layout_constraintTop_toTopOf="@+id/emojiTen" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/emojiTen"
        app:layout_constraintEnd_toStartOf="@+id/emojiEight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/emojiSix"
        app:layout_constraintTop_toTopOf="@+id/emojiTen" />


    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/emojiTen"
        app:layout_constraintEnd_toStartOf="@+id/emojiTen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/emojiSeven"
        app:layout_constraintTop_toTopOf="@+id/emojiTen" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emojiTen"
        app:layout_constraintStart_toStartOf="@+id/emojiTen"
        app:layout_constraintTop_toBottomOf="@+id/selected_emoji" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/emojiEight"
        app:layout_constraintTop_toBottomOf="@+id/emojiNine" />


</androidx.constraintlayout.widget.ConstraintLayout>