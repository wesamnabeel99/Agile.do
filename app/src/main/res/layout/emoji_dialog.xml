<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginNormal"
    android:elevation="8dp"
    >


    <com.aghajari.emojiview.view.AXEmojiEditText
        android:id="@+id/selected_emoji"
        android:layout_width="@dimen/paddingGaint"
        android:layout_height="@dimen/paddingGaint"
        android:layout_marginVertical="@dimen/marginNormal"
        android:background="@drawable/emoji_edittext_shape"
        android:gravity="center"
        android:maxLength="2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="56dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiOne"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiTwo"
        app:layout_constraintTop_toBottomOf="@+id/selected_emoji" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiThree"
        app:layout_constraintTop_toBottomOf="@+id/selected_emoji" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emojiOne" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiFive"
        app:layout_constraintTop_toBottomOf="@+id/emojiTwo" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiSix"
        app:layout_constraintTop_toBottomOf="@+id/emojiThree" />


    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiSeven"
        app:layout_constraintTop_toBottomOf="@+id/emojiFour" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiFour"
        app:layout_constraintTop_toBottomOf="@+id/selected_emoji" />

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:id="@+id/emojiTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/emojiEight"
        app:layout_constraintTop_toBottomOf="@+id/emojiNine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/add_card_shape"
        android:text="OK"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emojiSeven" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/emoji_edittext_shape"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ok_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ok_btn"
        app:layout_constraintTop_toBottomOf="@+id/ok_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>